<addons>
<addon id="service.subtitles.yts_subs_lite"
       name="YTS Subtitles Lite"
       version="1.0.0"
       provider-name="MRREC">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.subtitle.module"
             library="scraper/yify.py">
    <subtitles lang="en"/>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>YTS Subtitle Scraper</summary>
    <description>Fetches subtitles from yts-subs (Lite version)</description>
    <platform>all</platform>
    <license>MIT</license>
    <icon>icon.png</icon>
  </extension>
</addon>
</addons>
